<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0">

    <persistence-unit name="OnlineSellingPU" transaction-type="RESOURCE_LOCAL">
        <class>br.com.eaugusto.model.Product</class>

        <properties>
            <!-- Database connection -->
            <property name="jakarta.persistence.jdbc.url"
                value="jdbc:postgresql://localhost:5432/online_selling" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="admin" />
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />

            <!-- Hibernate as JPA Provider -->
            <property name="jakarta.persistence.provider"
                value="org.hibernate.jpa.HibernatePersistenceProvider" />

            <!-- Optional Hibernate settings -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />

            <property name="hibernate.jdbc.lob.non_contextual_creation" value="true" />
            <property name="hibernate.id.new_generator_mappings" value="true" />
        </properties>
    </persistence-unit>

</persistence>
